<div class="items-container">
    <h1>All Items</h1>

    <div class="item-actions">
        <form action="/items/new" method="GET">
            <button type="submit" class="action-button add-new-item-button">Add New Item</button>
        </form>
    </div>

    <table class="items-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Description</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% items.forEach(item => { %>
            <tr>
                <td><a href="/items/<%= item.id %>"><%= item.name %></a></td>
                <td><%= item.category_name %></td>
                <td><%= item.description %></td>
                <td><%= item.quantity %></td>
                <td>$<%= item.price %></td>
                <td class="item-actions">
                    <form action="/items/<%= item.id %>/edit" method="GET">
                        <button type="submit" class="action-button edit-item-button">Edit</button>
                    </form>
                    <form action="/items/<%= item.id %>?_method=DELETE" method="POST">
                        <button type="submit" class="action-button delete-item-button">Delete</button>
                    </form>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>
